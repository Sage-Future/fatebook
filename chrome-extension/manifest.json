{
  "name": "Fatebook Chrome Extension",
  "description": "The fastest way to make and track predictions",
  "homepage_url": "https://fatebook.io/",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Click to make a prediction",
    "default_icon": {
      "16": "scale.png",
      "24": "scale.png",
      "32": "scale.png"
    }
  },
  
  "commands": {
    "open_modal": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q"
      },
      "description": "Open prediction modal."
    }
  },

  "web_accessible_resources": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "resources": ["/direct_inject*", "*.png"]
    }
  ],

  "externally_connectable": {
    "matches": ["https://*/*", "http://*/*"]
  },

  "content_scripts": [
    {
      "run_at": "document_idle",
      "js": ["sentry-content-script.js", "after.js"],
      "css": ["style.css"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["https://*/*", "http://*/*"]
}
